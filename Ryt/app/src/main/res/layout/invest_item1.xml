<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/common_list_header" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_finance"
            android:visibility="visible"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="62dp"
            android:layout_width="match_parent"
            android:layout_height="18dp">
            <ImageView
                android:src="@mipmap/rongzijine"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <ProgressBar
                    android:id="@+id/fli_pb_progress"
                    android:layout_width="108dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="80"
                    android:progressDrawable="@drawable/progressbar"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/fli_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="1,500元/5000元"/>
            </FrameLayout>
            <ImageView
                android:layout_marginLeft="12dp"
                android:src="@mipmap/jizhishijian"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/fli_tv_date"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="1天后截止"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_creat"
            android:visibility="invisible"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="62dp"
            android:layout_width="match_parent"
            android:layout_height="15dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/zuijingengxin"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:id="@+id/cli_tv_update"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="最近更新:7月11日15:30"/>
            <ImageView
                android:layout_marginLeft="11dp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/yujiwancheng"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:id="@+id/cli_tv_finish"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预计完工:7月16日"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_auction"
            android:visibility="invisible"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="62dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/zuijingengxin"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/ali_tv_content"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近更新:7月11日15:30:00"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>