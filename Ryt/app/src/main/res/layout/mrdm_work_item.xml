<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yxh.ryt.custemview.ScaleScreenImageView
            android:id="@+id/mwi_iv_icon"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_icon"/>
        <com.yxh.ryt.custemview.CircleImageView
            android:id="@+id/mwi_iv_delete"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/shanchu"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/mwi_iv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="四不猴铜雕"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/mwi_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="15dp"
        android:text="铜雕/2015/非卖品"/>
</LinearLayout>