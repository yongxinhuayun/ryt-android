<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pw_rl_top">
        <TextView
            android:id="@+id/pw_ib_back"
            android:layout_width="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="14dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/pw_tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="20sp"
            android:text="发布作品"/>
        <TextView
            android:id="@+id/pw_tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="发布"
            android:layout_marginLeft="14dp"
            android:textColor="#000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/pw_iv_work"
        android:layout_margin="14dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_marginLeft="14dp"
        android:text="作品名"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/pw_et_workName"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@null"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#E9E9E9"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/pw_rl_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp">
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="创作年份"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">
            <TextView
                android:id="@+id/pw_tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/pw_iv_go4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiantou"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginBottom="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#E9E9E9"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginLeft="14dp"
        android:text="材质"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/pw_et_material"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#E9E9E9"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/pw_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp">
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否出售"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">
            <TextView
                android:id="@+id/pw_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/pw_iv_go5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiantou"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#E9E9E9"
        android:layout_height="1dp"/>
</LinearLayout>