<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fub_tv_edit"
                android:textColor="#339b47"
                android:textSize="16sp"
                android:text="编辑简介"
                android:gravity="center"
                android:background="@drawable/green_bt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:layout_width="101dp"
                android:layout_height="34dp" />
            <com.yxh.ryt.custemview.ScaleScreenImageView
                android:layout_marginTop="17dp"
                android:id="@+id/fb_siv_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"/>
            <TextView
                android:id="@+id/fb_tv_name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.yxh.ryt.custemview.JustifyTextView
                android:layout_marginTop="28dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/fb_jtv_content"
                android:textSize="16sp"
                android:lineSpacingExtra="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>