<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_top">
        <!--<ImageButton-->
            <!--android:id="@+id/ib_top_lf"-->
            <!--android:layout_width="50dp"-->
            <!--android:background="@null"-->
            <!--android:src="@mipmap/back"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_height="match_parent"-->
            <!--/>-->
        <TextView
            android:id="@+id/tv_top_ct"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="20sp"
            android:text="登录"/>
        <!--<TextView-->
            <!--android:visibility="gone"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:gravity="center"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="注册"/>-->
        <ImageButton
            android:id="@+id/ib_top_rt"
            android:layout_width="50dp"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/denglu_guanbi"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            />
        <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#E9E9E9"
        android:layout_height="1dp"></View>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/rl_center">

        <LinearLayout
            android:id="@+id/ll_center_one"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_center_one"
                android:layout_marginTop="20dp"
                android:hint="输入手机号"
                android:background="@null"
                android:maxLength="11"
                android:inputType="number"
                android:textColorHint="#D9D9D9"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/denglu_fenggexian"/>
            <EditText
                android:id="@+id/et_center_two"
                android:hint="输入密码"
                android:maxLength="16"
                android:layout_marginTop="15dp"
                android:textColorHint="#D9D9D9"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/denglu_fenggexian"/>
            <Button
                android:id="@+id/btn_center_login"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#B3B3B3"
                android:textSize="18sp"
                android:background="@mipmap/bukedianjianniu"
                android:text="登录"
                android:gravity="center"/>
            <RelativeLayout
                android:id="@+id/rl_center_one"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_center_reg"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:layout_height="30dp"
                    android:text="快速注册"
                    />
                <TextView
                    android:id="@+id/tv_center_forget"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:text="忘记密码"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_center_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">
            <LinearLayout
                android:id="@+id/ll_center_two"
                android:layout_below="@id/ll_center_one"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/denglu_kuaisudenglu"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:text="快速登录"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/denglu_kuaisudenglu"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@id/ll_center_two"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_center_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_wx"
                    />
                <!--android:layout_weight="1"-->
                <!--<ImageView-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/logo_sina"/>-->
                <!--<ImageView-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/logo_qq"/>-->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>