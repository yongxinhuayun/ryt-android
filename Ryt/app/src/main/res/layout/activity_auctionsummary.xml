<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/aas_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ib_top_lf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_top_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="略带彷徨的青春"
            android:textColor="#333333"
            android:textSize="@dimen/title" />
        <!--<TextView-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:gravity="center"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:text="注册"/>-->
        <ImageButton
            android:id="@+id/ib_top_rt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="center"
            android:src="@mipmap/share01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9" />
    </RelativeLayout>

    <WebView
        android:id="@+id/aas_wb_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_pay"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#CD3738"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/money" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="缴纳保证金"
            android:textColor="@android:color/white"
            android:textSize="@dimen/defult_font" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bid"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#CD3738"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="—"
                android:textSize="20sp"
                android:textColor="#CD3738"
                android:background="@android:color/white"/>
            <TextView

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="￥2,501"
                android:background="@android:color/white"/>
            <Button
                android:layout_gravity="right"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:textColor="#CD3738"
                android:background="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_bid"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bid" />

            <TextView
                android:id="@+id/tv_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="出价"
                android:textColor="@android:color/white"
                android:textSize="@dimen/defult_font" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


</LinearLayout>