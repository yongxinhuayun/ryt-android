<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/fl_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yxh.ryt.custemview.ScaleScreenImageView
            android:id="@+id/clh_tv_prc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#4D000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clh_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:text="逐鹿顺意铜雕"
                android:textColor="#FEFEFE"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/clh_tv_brief"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿什么和哈哈哈顺意铜雕逐鹿顺意铜雕顺意逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕顺意"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
        <FrameLayout
            android:visibility="invisible"
            android:id="@+id/ll_state_auction"
            android:layout_gravity="right|bottom"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:background="#4D000000"
            android:layout_marginBottom="17dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/liah_iv_progress"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#4fb641"
                />
            <TextView
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:id="@+id/clh_tv_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fefefe"
                android:textSize="11.2sp"
                android:text="拍卖预告"/>
        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_person"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fl_pic"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="17dp">

        <com.yxh.ryt.custemview.CircleImageView
            android:id="@+id/clh_cv_headerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/clh_cv_headerImage">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clh_tv_artistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朱炳仁"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/clh_tv_artistTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="铜雕技艺国家级传承人"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clh_tv_totalWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51件作品"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/clh_tv_totalFans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="416个粉丝"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/clh_ll_praise"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/praise_after_shape"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/zanc" />

            <TextView
                android:id="@+id/clh_tv_praiseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="12"
                android:textColor="#cd3738"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_praise_red"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fl_pic"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/after_praise"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_xin_hui_left"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/rl_person"
        android:layout_marginRight="33dp"
        android:src="@mipmap/icon_xin_hui_left"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_xin_hui_right"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/rl_person"
        android:layout_marginRight="16dp"
        android:src="@mipmap/icon_xin_hui_right"
        android:visibility="invisible" />


</RelativeLayout>