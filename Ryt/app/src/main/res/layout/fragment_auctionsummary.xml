        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <com.yxh.ryt.custemview.CircleImageView
                android:id="@+id/cl_headPortrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_master"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/cl_headPortrait"
                android:layout_alignRight="@+id/cl_headPortrait"
                android:src="@mipmap/head_v"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/cl_headPortrait"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朱炳仁"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/defult_font" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:text="铜雕技艺国家级传承人"
                        android:textColor="#808080"
                        android:textSize="@dimen/little_font" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/tv_num_works"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="51件作品"
                        android:textColor="#808080"
                        android:textSize="@dimen/little_font" />

                    <TextView
                        android:id="@+id/tv_num_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_num_works"
                        android:text="416个粉丝"
                        android:textColor="#808080"
                        android:textSize="@dimen/little_font" />
                </RelativeLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/praise_shape"
                android:src="@mipmap/guanzhuqian" />
        </RelativeLayout>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fafafa"/>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/fsl_rl_auctionProgress"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍卖流程"
                android:textColor="@android:color/black"
                android:textSize="@dimen/defult_font"/>

            <ImageView
                android:id="@+id/fsl_iv_progerssShow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/show_progress" />
        </RelativeLayout>

        <com.yxh.ryt.custemview.ExpandView
            android:id="@+id/expandView_auctionFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="invisible" />
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fafafa"/>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/fsl_rl_auctionDeposit"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保证金须知"
                android:textColor="@android:color/black"
                android:textSize="@dimen/defult_font"/>

            <ImageView
                android:id="@+id/fsl_iv_depositShow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/show_progress" />
        </RelativeLayout>

        <com.yxh.ryt.custemview.ExpandView
            android:id="@+id/expandView_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="invisible" />
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fafafa"/>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</ScrollView>