<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.yxh.ryt.custemview.ScaleScreenImageView
                android:id="@+id/fsl_sv_picture"
                android:src="@mipmap/default_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="bottom"
                >
                <ProgressBar
                    android:id="@+id/fli1_pb_progress"
                    android:layout_width="match_parent"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="80"
                    android:progressDrawable="@drawable/progressbar1"/>
                <ImageView
                    android:id="@+id/fsl_iv_date"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shijian"/>
                <TextView
                    android:id="@+id/fsl_tv_state"
                    android:layout_marginLeft="6dp"
                    android:textColor="#ffffff"
                    android:textSize="11.5sp"
                    android:layout_toRightOf="@id/fsl_iv_date"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抽奖已揭晓"/>
                <TextView
                    android:id="@+id/fsl_tv_finalPerson"
                    android:layout_marginLeft="17dp"
                    android:textColor="#ffffff"
                    android:textSize="11.5sp"
                    android:layout_toRightOf="@id/fsl_tv_state"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜三毛获得此作品"/>
            </RelativeLayout>
        </FrameLayout>
        <TextView
            android:layout_marginLeft="17dp"
            android:id="@+id/fsl_tv_title"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:text="布上油画 · 初见"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="17dp"
            android:id="@+id/fsl_tv_brief"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="静寂迷人的夜空，是记忆深处最遥远和笃定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="17dp"
            android:id="@+id/fsl_tv_price"
            android:layout_marginTop="20dp"
            android:textColor="#c71f21"
            android:textSize="20sp"
            android:text="￥2,501"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="17dp"
            android:id="@+id/fsl_tv_priceName"
            android:layout_marginTop="6dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="当前价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="17dp"
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/fsl_ll_before"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="17dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shijian"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="7月30号 18:00:00开拍"
                android:id="@+id/fsl_tv_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="29dp"
                android:src="@mipmap/read"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="围观"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/fsl_tv_wenGuan"
                android:layout_marginLeft="3dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="93,080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/fsl_ll_after"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="17dp">
            <ImageView
                android:src="@mipmap/paimaidezhu"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="出价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/fsl_tv_frequency"
                android:layout_marginLeft="4dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="1,200次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:src="@mipmap/icon_jiajiafudu"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加价幅度"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/fsl_tv_range"
                android:layout_marginLeft="3dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:src="@mipmap/read"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="围观"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/fsl_tv_afterWenGuan"
                android:layout_marginLeft="3dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="93,080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fafafa"/>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <com.yxh.ryt.custemview.ListViewForScrollView
            android:id="@+id/fsl_cls_listNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none"/>
        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fafafa"/>

        <View
            android:background="#0c000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#FAFAFA"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FAFAFA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="top"
                android:hint="我也来说两句..."
                android:textColorHint="#B2B2B2"
