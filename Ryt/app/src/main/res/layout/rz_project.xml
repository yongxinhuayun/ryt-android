<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_project"
    android:background="@android:color/white"
    android:orientation="vertical">
<ScrollView
    android:id="@+id/sv_sv"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yxh.ryt.custemview.ScaleScreenImageView
            android:id="@+id/cl_01_tv_prc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/default_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            >

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小盆儿"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/read"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="3dp"
                android:layout_toLeftOf="@+id/tv_reader"/>
            <TextView
                android:id="@+id/tv_reader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="500 浏览"
                android:textColor="#808080"
                android:textSize="@dimen/little_font"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="朱炳仁"
                android:textColor="#808080"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_name"
                android:text="1天前"
                android:textColor="#808080"
                android:textSize="@dimen/defult_font" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_project_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:text="大师手作独品，灵感再现，倾心定制"
            android:textColor="@android:color/black"
            android:textSize="@dimen/defult_font" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:text="￥ 1.00"
            android:textColor="@android:color/black"
            android:textSize="@dimen/defult_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:text="最低投资金额"
            android:textColor="#808080"
            android:textSize="@dimen/defult_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#E9E9E9"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_prise"
                android:background="@drawable/prise_shape">
                <ImageView
                    android:id="@+id/iv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/before_praise"
                    />
                <TextView

                    android:id="@+id/tv_praise"
                    android:text="30"
                    android:layout_marginLeft="6dp"
                    android:textColor="#D55B5C"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/divide"
                android:layout_toRightOf="@+id/ll_prise"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:layout_toRightOf="@+id/divide"
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_invester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
            <ImageButton
                android:id="@+id/ib_go"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textColor="#EBEBEB"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FAFAFA"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textColor="#EBEBEB"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">
            <com.yxh.ryt.custemview.CircleImageView
                android:id="@+id/cl_headPortrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                />
            <ImageView
                android:id="@+id/iv_master"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/head_v"
                android:layout_alignBottom="@+id/cl_headPortrait"
                android:layout_alignRight="@+id/cl_headPortrait"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/cl_headPortrait">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/defult_font"
                        android:text="朱炳仁"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textSize="@dimen/little_font"
                        android:text="铜雕技艺国家级传承人"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_name2"
                        android:textColor="#808080"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_num_works"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_font"
                        android:text="51件作品"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_num_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_font"
                        android:text="416个粉丝"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_num_works"
                        android:textColor="#808080"/>
                </RelativeLayout>

            </LinearLayout>
            <ImageButton
                android:id="@+id/ib_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weiguanzhu"
                android:background="@drawable/prise_shape"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="#FAFAFA"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            >
            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clock"/>
                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="10天后截止"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

                <com.yxh.ryt.custemview.RoundProgressBar
                    android:id="@+id/rpb_progress"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                     />
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="18dp"
                    android:text="10天后截止"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#FAFAFA"></TextView>
        <com.yxh.ryt.custemview.ListViewForScrollView
            android:layout_marginTop="10dp"
            android:id="@+id/lv_invester"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:layout_height="wrap_content"></com.yxh.ryt.custemview.ListViewForScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="#FAFAFA"></TextView>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
           >
            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textSize="@dimen/defult_font"
                android:gravity="top"
                android:background="#FAFAFA"/>
            <Button
                android:id="@+id/bt_comment"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="评论"
                android:textColor="@android:color/white"
                android:background="@android:color/black"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="6dp"/>
        </RelativeLayout>


        <com.yxh.ryt.custemview.ListViewForScrollView
            android:layout_marginTop="30dp"
            android:id="@+id/lv_comment"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:divider="@null"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            ></com.yxh.ryt.custemview.ListViewForScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="#FAFAFA"></TextView>
        <RelativeLayout
            android:id="@+id/rl_progress"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资流程"
                android:textSize="@dimen/defult_font"
                android:textColor="@android:color/black"
                ></TextView>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_is_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/show_progress"/>
        </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#FAFAFA"
    />
       <!-- <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <WebView
                android:id="@+id/wv_invest_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:ignore="WebViewLayout"></WebView>
        </LinearLayout>-->

        <com.yxh.ryt.custemview.ExpandView
            android:id="@+id/expandView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="invisible"

            android:clickable="true"/>
    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#EF5B71"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/invest_button"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </LinearLayout>
</LinearLayout>