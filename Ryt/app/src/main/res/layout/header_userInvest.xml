    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="55dp">
            <com.yxh.ryt.custemview.CircleImageView
                android:id="@+id/hui_cv_headPortrait"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:src="@mipmap/jibenziliao_touxiang"
                app:border_color="@android:color/white"
                app:border_width="1dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:id="@+id/ll_header_qm"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hui_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="木头人"
            android:textColor="#000000"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/hui_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文艺小青年"
            android:textColor="#999999"
            android:layout_marginTop="16dp"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hui_ll_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/circularbead_1">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/hui_iv_attention"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:src="@mipmap/weiguanzhu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/circularbead_1">
            <ImageView
                android:id="@+id/hui_iv_privateLetter"
                android:layout_width="17dp"
                android:layout_height="12dp"
                android:src="@mipmap/sixin"/>
        </LinearLayout>


    </LinearLayout>
