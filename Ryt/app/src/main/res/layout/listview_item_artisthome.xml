<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp">

        <com.yxh.ryt.custemview.ScaleScreenImageView
            android:id="@+id/liah_si_prc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#4D000000">
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="14dp"
                android:id="@+id/liah_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逐鹿顺意铜雕"
                android:textColor="#FEFEFE"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/liah_tv_brief"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:text="逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿什么和哈哈哈顺意铜雕逐鹿顺意铜雕顺意逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕顺意"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="2"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lia_fl_state"
            android:layout_gravity="right|bottom"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:background="#4D000000"
            android:layout_marginBottom="17dp"
            >
            <ImageView
                android:id="@+id/liah_iv_progress"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#4fb641"
                />
            <TextView
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:id="@+id/liah_iv_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fefefe"
                android:textSize="11.2sp"
                android:text="融資中￥500,000"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>