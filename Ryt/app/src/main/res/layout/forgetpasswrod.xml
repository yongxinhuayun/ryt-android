<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/fp_rl_top">
        <ImageView
        android:id="@+id/fp_ib_back"
        android:layout_width="wrap_content"
        android:background="@null"
        android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/fp_tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/title"
            android:text="忘记密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fp_rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/fp_et_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColorHint="#D9D9D9"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:hint="输入手机号"/>
        <ImageView
            android:layout_below="@id/fp_et_phone"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:id="@+id/fp_iv_fegexian01"
            android:src="@mipmap/denglu_fenggexian"/>
        <LinearLayout
            android:layout_below="@id/fp_iv_fegexian01"
            android:orientation="horizontal"
            android:id="@+id/fp_ll_verifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/fp_et_verifyCode"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="14sp"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColorHint="#d9d9d9"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#E9E9E9"/>
            <TextView
                android:id="@+id/fp_bt_verifyCode"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:text="发送验证码" />
        </LinearLayout>
        <ImageView
            android:layout_below="@id/fp_ll_verifyCode"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:id="@+id/fp_iv_fengexian02"
            android:src="@mipmap/denglu_fenggexian"/>
        <EditText
            android:id="@+id/fp_et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:textColorHint="#D9D9D9"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:hint="请输入密码"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:layout_below="@id/fp_iv_fengexian02"
            android:layout_marginTop="7dp"/>
        <ImageView
            android:layout_below="@id/fp_et_password"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:id="@+id/fp_iv_fengexian03"
            android:layout_height="wrap_content"
            android:src="@mipmap/denglu_fenggexian"/>
        <Button
            android:id="@+id/fp_bt_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fp_iv_fengexian03"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#B3B3B3"
            android:textSize="14sp"
            android:background="@mipmap/anniu_bukedianji"
            android:text="完成" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>