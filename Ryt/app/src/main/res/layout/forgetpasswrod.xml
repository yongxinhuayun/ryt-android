<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/fp_rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/fp_ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wangjimima_fanhui"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/fp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/fp_ib_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wangjimima_guanbi"
            android:layout_centerVertical="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@id/fp_rl_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"/>
    <RelativeLayout
        android:id="@+id/fp_rl_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="150dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp">
        <EditText
            android:id="@+id/fp_et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:hint="输入手机号"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:src="@mipmap/denglu_fenggexian"
            android:layout_below="@id/fp_et_phone"/>
        <LinearLayout
            android:layout_below="@id/fp_et_phone"
            android:orientation="horizontal"
            android:id="@+id/fp_ll_verifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/fp_et_verifyCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:background="@null"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#000000"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/fp_bt_verifyCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="发送验证码"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/fp_et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/register_shape"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:layout_below="@id/fp_ll_verifyCode"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/fp_bt_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/fp_et_password"
            android:layout_marginTop="15dp"
            android:background="@drawable/register_shape"
            android:textSize="18sp"
            android:text="确定" />
    </RelativeLayout>
</LinearLayout>