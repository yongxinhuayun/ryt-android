<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/btn_lf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#339b47"
            android:layout_marginRight="14dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="申请为艺术家中" />

        <TextView
            android:id="@+id/tv_top_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的"
            android:textColor="#333333"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#fafafa"
            android:layout_height="match_parent">
            <!--<include layout="@layout/user_header"/>-->
            <RelativeLayout
                android:id="@+id/rl_user_headImage"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="85dp"
                android:background="@android:color/white">
                <com.yxh.ryt.custemview.CircleImageView
                    android:id="@+id/uc_iv_headImage"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/jibenziliao_touxiang"/>
                <TextView
                    android:id="@+id/uc_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/uc_iv_headImage"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="游客"/>
                <ImageView
                    android:id="@+id/uc_iv_go1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E9E9E9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#E9E9E9"/>
            <RelativeLayout
                android:id="@+id/rl_user_index"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="68dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/icon_01"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/wodezhye"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_01"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="我的主页"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/go1"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/go1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
                <View

                    android:id="@+id/uc_view"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9E9E9"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_user_project"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="68dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/icon_06"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/wodezhye"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_06"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="我的项目"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/go6"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/go6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E9E9E9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#E9E9E9"/>
            <RelativeLayout
                android:id="@+id/rl_02"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="68dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/icon_02"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/qianbao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_02"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="钱包"/>
                <ImageView
                    android:id="@+id/go2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E9E9E9"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_auction"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="68dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/icon_auction"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/paimaidingdan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_auction"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="拍卖订单"/>
                <ImageView
                    android:id="@+id/go2_auction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E9E9E9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#E9E9E9"/>
            <RelativeLayout
                android:id="@+id/rl_yijian"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="68dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/icon_04"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/yijianfankui"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_04"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="意见反馈"/>
                <ImageView
                    android:id="@+id/go5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E9E9E9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#E9E9E9"/>
            <RelativeLayout
                android:id="@+id/user_setting"
                android:layout_width="match_parent"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:layout_height="68dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/icon_03"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/shezhi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/defult_font"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_03"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:text="设置"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/go4"
                    android:layout_marginLeft="10dp"
                    android:text="男"/>
                <ImageView
                    android:id="@+id/go4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E9E9E9"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>