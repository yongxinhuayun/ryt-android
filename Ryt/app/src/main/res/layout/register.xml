<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rg_rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:id="@+id/rg_ib_back"
            android:layout_width="50dp"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/zhuce_fanhui"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/rg_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="加入融艺投"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            />
        <!--<ImageButton
            android:id="@+id/ib_top_rt"
            android:layout_width="50dp"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:src="@mipmap/denglu_guanbi"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            />-->
    </RelativeLayout>
    <View
        android:id="@+id/rg_line"
        android:layout_below="@id/rg_rl_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"/>
    <RelativeLayout
        android:layout_below="@id/rg_line"
        android:id="@+id/rg_rl_center"
        android:layout_width="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <EditText
            android:gravity="center_vertical"
            android:id="@+id/rg_et_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:textColorHint="#D9D9D9"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@android:color/black"
            android:hint="输入手机号"/>
        <ImageView
            android:layout_below="@id/rg_et_phone"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:id="@+id/fegexian01"
            android:src="@mipmap/denglu_fenggexian"/>
        <LinearLayout
            android:layout_below="@id/fegexian01"
            android:orientation="horizontal"
            android:id="@+id/rg_ll_verifyCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/rg_et_verifyCode"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="14sp"
                android:hint="输入验证码"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColorHint="#d9d9d9"
                android:layout_height="match_parent"
                android:background="@null"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#E9E9E9"/>
            <TextView
                android:id="@+id/rg_bt_verifyCode"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:text="获取验证码" />
        </LinearLayout>
        <ImageView
            android:layout_below="@id/rg_ll_verifyCode"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:id="@+id/fengexian02"
            android:src="@mipmap/denglu_fenggexian"/>
        <EditText
            android:id="@+id/rg_et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColorHint="#D9D9D9"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_below="@id/fengexian02"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_below="@id/rg_et_password"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:id="@+id/fengexian03"
            android:layout_height="wrap_content"
            android:src="@mipmap/denglu_fenggexian"/>
        <!--<EditText-->
            <!--android:id="@+id/rg_et_passwordAgain"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/login_reg_et_bg"-->
            <!--android:hint="请再次输入密码"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:inputType="textPassword"-->
            <!--android:layout_below="@id/rg_et_password"/>-->
        <Button
            android:id="@+id/rg_bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fengexian03"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#B3B3B3"
            android:textSize="14sp"
            android:background="@mipmap/anniu_bukedianji"
            android:text="注册" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/rg_rl_center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@mipmap/yonghuxieyi_querenanniu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D9D9D9"
            android:text="我已阅读并同意[融艺投]"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/rg_tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ef5b70"
            android:text="用户协议"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_center_two"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/denglu_kuaisudenglu"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:text="快速登录"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/denglu_kuaisudenglu"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_center_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_wx"
                />
            <!--android:layout_weight="1"-->
            <!--<ImageView-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/logo_sina"/>-->
            <!--<ImageView-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/logo_qq"/>-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>