<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rg_rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/rg_ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            />
        <TextView
            android:id="@+id/rg_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="快速注册"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"/>
    <RelativeLayout
        android:id="@+id/rg_rl_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/rg_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_reg_et_bg"
            android:hint="请输入手机号"/>
        <LinearLayout
            android:layout_below="@id/rg_et_phone"
            android:orientation="horizontal"
            android:id="@+id/rg_ll_verifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_reg_et_bg"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/rg_et_verifyCode"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:background="@null"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#E9E9E9"/>
            <TextView
                android:id="@+id/rg_bt_verifyCode"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="获取验证码" />
        </LinearLayout>
        <EditText
            android:id="@+id/rg_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_reg_et_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_below="@id/rg_ll_verifyCode"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/rg_et_passwordAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_reg_et_bg"
            android:hint="请再次输入密码"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:layout_below="@id/rg_et_password"/>
        <Button
            android:id="@+id/rg_bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_et_passwordAgain"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:text="注册" />
        <TextView
            android:layout_below="@id/rg_bt_register"
            android:id="@+id/rg_tv_login"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="立即登录"/>
    </RelativeLayout>


</LinearLayout>