<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <com.yxh.ryt.custemview.ScaleScreenImageView
        android:id="@+id/fac_si_picture"
        android:src="@mipmap/default_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp">
        <TextView
            android:textColor="#000000"
            android:textSize="24sp"
            android:text="布上油画 · 初见"
            android:id="@+id/fac_tv_title"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fac_tv_state"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="未审核"
            android:layout_gravity="center_vertical"
            android:background="#2185d0"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/fac_tv_brief"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:text="静寂迷人的夜空，是记忆深处最遥远和笃定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fac_tv_money"
        android:textColor="#c71f21"
        android:textSize="19sp"
        android:text="￥2,501"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="17dp"
        android:textColor="#999999"
        android:textSize="12sp"
        android:text="项目金额"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_marginBottom="17dp"
        android:id="@+id/fac_rl_button"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/fac_tv_edit"
            android:id="@+id/fac_tv_commitCheck"
            android:layout_marginRight="12dp"
            android:background="@drawable/edit_focus1"
            android:layout_width="75dp"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:text="提交审核"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/fac_tv_edit"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_focus2"
            android:layout_width="75dp"
            android:text="编辑"
            android:gravity="center"
            android:textColor="#57ad68"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
</LinearLayout>