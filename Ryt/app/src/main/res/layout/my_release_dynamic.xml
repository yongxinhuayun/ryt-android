<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mrdm_rl_top">
        <TextView
            android:id="@+id/mrdm_tv_back"
            android:layout_width="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="发布项目"
           />
        <TextView
            android:id="@+id/mrdm_tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="20sp"
            android:text="我的"/>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <include layout="@layout/user_header"/>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#E9E9E9"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"></View>
    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"></View>
    <android.support.v4.view.ViewPager
        android:id="@+id/yishujia_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>