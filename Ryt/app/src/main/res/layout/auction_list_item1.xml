<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/common_list_header1" />
    <LinearLayout
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="62dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ali1_iv_date"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/jizhishijian"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/ali1_iv_finalPerson"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/paimaidezhu"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/ali1_tv_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近更新:7月11日15:30:00"/>
    </LinearLayout>
</LinearLayout>