<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:id="@+id/cli_ll_top">
    <include layout="@layout/common_listitem_01" />
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_height="wrap_content">
    <View
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:background="#E9E9E9"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">
        <TextView
            android:id="@+id/cli_tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="最新一次更新:5分钟前"
            />
        <RelativeLayout
            android:id="@+id/cli_rl_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cli_tv_update"
            android:layout_alignTop="@id/cli_tv_update"
            android:layout_toRightOf="@id/cli_tv_update">
            <!--<ImageView-->
                <!--android:id="@+id/cli_iv_redPoint"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:src="@mipmap/smallredpoint"/>-->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@id/cli_rl_update"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cli_tv_predictComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计完工:1月24日"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                />

        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"
        />
</LinearLayout>