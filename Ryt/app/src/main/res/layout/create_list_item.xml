<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_listitem_01" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/cli_tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新一次更新:5分钟前"
            />
        <RelativeLayout
            android:id="@+id/cli_rl_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cli_tv_update"
            android:layout_alignTop="@id/cli_tv_update"
            android:layout_toRightOf="@id/cli_tv_update">
            <!--<ImageView-->
                <!--android:id="@+id/cli_iv_redPoint"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:src="@mipmap/smallredpoint"/>-->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cli_rl_update"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cli_tv_predictComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计完工:"
                />
            <TextView
                android:id="@+id/cli_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1月24日"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"
        />
</LinearLayout>