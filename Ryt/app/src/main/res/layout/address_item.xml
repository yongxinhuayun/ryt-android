<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#e2e2e2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="永新华韵"
            android:textColor="#000000"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="186888888888"
            android:textColor="#000000"
            android:textSize="@dimen/title" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_adress"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="jafkjaskjfkajsgkaskjmdgkljsmakgljms;lk
        jmag;lksagllskmafl;ksadksdfm"
        android:textColor="#000000"
        android:textSize="@dimen/defult_font" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="21dp">

        <LinearLayout
            android:id="@+id/ll_defult_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_selected"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/yixuanze" />

            <TextView
                android:id="@+id/tv_defult"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="默认地址"
                android:textColor="#000000"
                android:textSize="@dimen/defult_font" />
        </LinearLayout>


        <Button
            android:id="@+id/bt_del"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_address_edit"
            android:focusable="false"
            android:text="删除"
            android:textColor="#EF5B70"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_edit"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/bt_del"
            android:background="@drawable/shape_address_edit"
            android:focusable="false"
            android:text="编辑"
            android:textColor="#EF5B70"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />
</LinearLayout>