<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9"/>
    <RelativeLayout
        android:id="@+id/aass_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="17dp"
        >
        <LinearLayout
            android:id="@+id/aass_ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="33dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="17sp"
                    android:text="温群英"
                    android:textColor="#333333"
                    android:id="@+id/aass_tv_addressName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="right"
                    android:textSize="17sp"
                    android:text="15110008479"
                    android:textColor="#333333"
                    android:id="@+id/aass_tv_addressPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:id="@+id/aass_tv_addressDetail"
                android:text="地址地址"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/aass_iv_go"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9"/>
</LinearLayout>