    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9E9E9"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:background="#E9E9E9"/>


        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.yxh.ryt.custemview.CircleImageView
                android:id="@+id/uez_iv_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/go1"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9E9E9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E9E9E9" />

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/rl_nickName"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/go2"
                android:text="妮妮"
                android:textColor="#808080"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/go2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E9E9E9" />
        </RelativeLayout>
    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/rl_number"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="180000000"
            android:layout_marginRight="20dp"
            android:textColor="#808080"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9" />
    </RelativeLayout>

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/rl_sign"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="个性签名"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/iv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/go3"
                android:text="未填写"
                android:textColor="#808080"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/go3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E9E9E9" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/go4"
                android:text="男"
                android:textColor="#808080"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/go4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E9E9E9" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="收货地址"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/go5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9" />

</LinearLayout>