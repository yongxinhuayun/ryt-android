<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pi_ll_top">
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yxh.ryt.custemview.CircleImageView
            android:id="@+id/pi_iv_icon"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/pi_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pi_iv_icon"
            android:text="三毛猫"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/pi_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-02-19  14:00"
            android:layout_toRightOf="@id/pi_iv_icon"
            android:layout_alignBottom="@id/pi_iv_icon"/>
    </RelativeLayout>
</LinearLayout>