<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ll_header_gz"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_user_header_gz_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="33"
                android:textColor="#666666"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_user_header_gz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关注"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="@dimen/defult_font" />
                </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.yxh.ryt.custemview.CircleImageView
                android:id="@+id/rs_iv_headPortrait"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@mipmap/jibenziliao_touxiang"
                app:border_color="@android:color/white"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/tv_user_header_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="立即登录"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_header_fs"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_header_fs_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="18"
                android:textColor="#666666"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_user_header_fs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="粉丝"
                android:textColor="#666666"
                android:textSize="@dimen/defult_font" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/ll_header_qm"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名："
            android:textColor="#666666"
            android:textSize="@dimen/defult_font" />

        <TextView
            android:id="@+id/tv_user_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一句话20字以内"
            android:textColor="#666666"
            android:textSize="@dimen/defult_font" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_header_value"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_header_je_value_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50元"
                android:textColor="#333333"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_user_header_je_txt_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目总金额"
                android:textColor="#333333"
                android:textSize="@dimen/defult_font" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#E9E9E9" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_header_je_value_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20元"
                android:textColor="#333333"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_user_header_je_txt_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目总拍卖金额"
                android:textColor="#333333"
                android:textSize="@dimen/defult_font" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#E9E9E9" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_header_je_value_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textColor="#333333"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_user_header_je_txt_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍卖溢价率"
                android:textColor="#333333"
                android:textSize="@dimen/defult_font"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>