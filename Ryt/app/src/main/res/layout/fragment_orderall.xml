<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <View android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="#fafafa"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/foa_iv_projectPicture"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:src="@mipmap/default_icon"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:id="@+id/foa_iv_projectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猫叠图天然水晶内画图"/>
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"
                    android:background="#21ba45"
                    android:id="@+id/foa_iv_projectState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易成功"/>
            </LinearLayout>
            <TextView
                android:id="@+id/foa_iv_projectBrief"
                android:textSize="12sp"
                android:layout_marginTop="11dp"
                android:text="大师之作，传世之物，罕见珍品，收藏潜力不可预估，大师之作"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/foa_tv_projectPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#c71f21"
                    android:textSize="16sp"
                    android:text="￥200.00"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="#fafafa"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp">
        <TextView
            android:id="@+id/foa_tv_edit"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_focus2"
            android:layout_width="75dp"
            android:text="删除订单"
            android:gravity="center"
            android:textColor="#57ad68"
            android:layout_height="30dp" />
    </RelativeLayout>
</LinearLayout>