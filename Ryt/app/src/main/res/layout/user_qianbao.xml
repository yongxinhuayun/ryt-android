<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/rl_top">
            <ImageView
                android:id="@+id/ib_top_lf"
                android:layout_width="wrap_content"
                android:background="@null"
                android:src="@mipmap/back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_top_ct"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="钱包"/>
            <ImageView
                android:id="@+id/ib_top_rt"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:layout_marginRight="14dp"
                android:src="@mipmap/qianbao_gengduo"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#E9E9E9"
                android:layout_height="1dp"/>
        </RelativeLayout>
    <View
        android:id="@+id/uqb_line1"
        android:layout_marginTop="12dp"
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
        android:background="#E9E9E9"
        android:layout_height="1dp"/>
    <ListView
        android:layout_below="@id/uqb_line1"
        android:id="@+id/uqb_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="60dp"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="#00000000"/>

    <LinearLayout
        android:background="#fafafa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="52dp">
        <View
            android:layout_width="match_parent"
            android:background="#E9E9E9"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btn_tx"
            android:layout_width="match_parent"
            android:text="提现"
            android:textSize="18sp"
            android:textColor="#EF5B70"
            android:background="@null"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>