                <!--android:layout_height="10dp"-->
                <!--android:background="#000000"/>-->
                <!--</FrameLayout>-->
                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="@style/mProgress_horizontal"
                    android:layout_width="280dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:id="@+id/tv_pb_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19.5dp"
                    android:layout_toRightOf="@id/progressBar1"
                    android:text="30%" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:layout_marginRight="13.5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fli_ll_tv_investGoalMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="3000元"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="目标金额"
                        android:textSize="12.38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fli_ll_tv_remainingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="24时00分00秒"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="剩余时间"
                        android:textSize="12.38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fli_ll_tv_investGoalPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1000000"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="投资人数"
                        android:textSize="12.38sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:background="#E9E9E9"
                android:layout_height="1dp"></View>
        <!--<com.viewpagerindicator.TabPageIndicator-->
