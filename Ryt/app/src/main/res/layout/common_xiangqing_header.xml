    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="242dp">

        <com.yxh.ryt.custemview.ScaleScreenImageView
            android:id="@+id/cl_01_tv_prc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ryt_logo"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:paddingBottom="14dp"
                android:id="@+id/cl_01_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逐鹿顺意铜雕"
                android:textColor="#FEFEFE"
                android:textSize="18sp" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.yxh.ryt.custemview.CircleImageView
            android:id="@+id/cl_01_civ_headPortrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
             />
        <TextView
            android:id="@+id/cl_01_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="朱炳仁"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/cl_01_ll_zhicheng"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E9E9E9"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/cl_01_tv_zhicheng"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:text="铜雕技艺国家级传承人"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <com.yxh.ryt.custemview.BorderTextView
        android:id="@+id/cl_01_tv_brief"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textColor="#666666"
        android:text="逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕逐鹿顺意铜雕顺意"
        android:textSize="11sp"
        android:maxLength="300"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>