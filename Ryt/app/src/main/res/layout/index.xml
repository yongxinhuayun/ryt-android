<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <!--<FrameLayout-->
        <!--android:id="@+id/fl_tab"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp">-->
    <!--</FrameLayout>-->
    <com.yxh.ryt.custemview.CustomViewPager
        android:id="@+id/index_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#343434"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#343434"
        android:layout_height="52dp">
        <LinearLayout
            android:id="@+id/rl_tab_01"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_01"
                android:layout_width="wrap_content"
                android:background="@mipmap/shouyeweixuanzhong"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tab_01"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#cccccc"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl_tab_02"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_02"
                android:src="@mipmap/paihangweixuanzhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tab_02"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:text="排行"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl_tab_03"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_03"
                android:layout_width="wrap_content"
                android:src="@mipmap/xiaoxiweixuanzhong"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tab_03"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:text="消息"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl_tab_04"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_04"
                android:layout_width="wrap_content"
                android:src="@mipmap/wodeweixuanzhong"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tab_04"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
