<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <!--<FrameLayout-->
        <!--android:id="@+id/fl_tab"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp">-->
    <!--</FrameLayout>-->
    <com.yxh.ryt.custemview.CustomViewPager
        android:id="@+id/index_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/rl_tab_01"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_01"
                android:src="@mipmap/ic_launcher"
                android:layout_width="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/tv_tab_01"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_tab_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="首页"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tab_02"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_02"
                android:src="@mipmap/ic_launcher"
                android:layout_width="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/tv_tab_02"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_tab_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="排行"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tab_03"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_03"
                android:src="@mipmap/ic_launcher"
                android:layout_width="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/tv_tab_03"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_tab_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="消息"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tab_04"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_04"
                android:src="@mipmap/ic_launcher"
                android:layout_width="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/tv_tab_04"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_tab_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="我的"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
