<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.yxh.ryt.custemview.CircleImageView
                android:id="@+id/ci_iv_otherIcon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ci_tv_otherNickname"
                    android:text="二大爷"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/ci_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-08 16:00"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ci_tv_reply"
                android:layout_alignParentRight="true"
                android:layout_width="58dp"
                android:background="@drawable/common_bg_03"
                android:layout_height="24dp"
                android:text="回复"
                android:textColor="#ef5b70"
                android:textSize="15sp"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ci_tv_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="回复三行:你真棒"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:id="@+id/ci_ll_pre"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/ci_tv_preName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="三行"/>
                <TextView
                    android:id="@+id/ci_tv_preContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="你真棒"
                    android:textColor="#666666"/>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ci_ll_artwork"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ci_iv_projectIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ci_tv_projectTitle"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="永新华韵"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/ci_tv_projectBrief"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="永新华韵"
                android:lines="2"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#e2e2e2"/>
</LinearLayout>