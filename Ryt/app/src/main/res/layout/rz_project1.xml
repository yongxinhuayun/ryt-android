<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yxh.ryt.custemview.ScaleScreenImageView
                android:id="@+id/cl_01_tv_prc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/default_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小盆儿"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/title" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/tv_reader"
                    android:paddingBottom="3dp"
                    android:src="@mipmap/read" />

                <TextView
                    android:id="@+id/tv_reader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="500 浏览"
                    android:textColor="#808080"
                    android:textSize="@dimen/little_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="朱炳仁"
                    android:textColor="#808080"
                    android:textSize="@dimen/defult_font" />

                <TextView
                    android:id="@+id/tv_creat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text="1天前"
                    android:textColor="#808080"
                    android:textSize="@dimen/defult_font" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_project_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="大师手作独品，灵感再现，倾心定制"
                android:textColor="@android:color/black"
                android:textSize="@dimen/defult_font" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="￥ 1.00"
                android:textColor="@android:color/black"
                android:textSize="@dimen/defult_font" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:text="最低投资金额"
                        android:textColor="#808080"
                        android:textSize="@dimen/defult_font" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#E9E9E9"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_praise"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/praise_shape"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_praise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/zanc" />

                            <TextView
                                android:id="@+id/tv_praise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="30"
                                android:textColor="#D55B5C"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/divide"
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/ll_praise"
                            android:background="#F5F5F5" />

                        <!--<LinearLayout
                            android:id="@+id/ll_invester"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/divide"
                            android:orientation="horizontal"></LinearLayout>-->
                        <com.yxh.ryt.custemview.CircleImageView
                            android:id="@+id/civ_pic"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@+id/divide"
                            android:src="@mipmap/default_icon"
                            android:visibility="gone" />

                        <com.yxh.ryt.custemview.HorizontalListView
                            android:id="@+id/hlv_praise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/civ_pic"></com.yxh.ryt.custemview.HorizontalListView>


                        <ImageButton
                            android:id="@+id/ib_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/arrow"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_xin_hui_left"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/icon_xin_hui_left"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_xin_hui_right"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="21dp"
                    android:src="@mipmap/icon_xin_hui_right"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_praise_red"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="22dp"
                    android:src="@mipmap/after_praise"
                    android:visibility="invisible" />
            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:textColor="#EBEBEB"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FAFAFA"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:textColor="#EBEBEB"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp">

                <com.yxh.ryt.custemview.CircleImageView
                    android:id="@+id/cl_headPortrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/iv_master"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/cl_headPortrait"
                    android:layout_alignRight="@+id/cl_headPortrait"
                    android:src="@mipmap/head_v"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/cl_headPortrait"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/tv_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="朱炳仁"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/defult_font" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/tv_name2"
                            android:text="铜雕技艺国家级传承人"
                            android:textColor="#808080"
                            android:textSize="@dimen/little_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/tv_num_works"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="51件作品"
                            android:textColor="#808080"
                            android:textSize="@dimen/little_font" />

                        <TextView
                            android:id="@+id/tv_num_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/tv_num_works"
                            android:text="416个粉丝"
                            android:textColor="#808080"
                            android:textSize="@dimen/little_font" />
                    </RelativeLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ib_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/praise_shape"
                    android:src="@mipmap/weiguanzhu" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="#FAFAFA"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <LinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="距融资结束"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tv_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10天"
                        android:textColor="#C71F21" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.yxh.ryt.custemview.RoundProgressBar
                        android:id="@+id/rpb_progress"
                        android:layout_width="47dp"
                        android:layout_height="47dp" />

                    <TextView
                        android:id="@+id/tv_investor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="bottom"
                        android:text="10天后截止" />

                    <TextView
                        android:id="@+id/tv_invest_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后截止"
                        android:textColor="#999999" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#FAFAFA"></TextView>

            <com.yxh.ryt.custemview.ListViewForScrollView
                android:id="@+id/lv_invester_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:listSelector="#00000000"
                android:scrollbars="none"></com.yxh.ryt.custemview.ListViewForScrollView>

            <com.yxh.ryt.custemview.ListViewForScrollView
                android:id="@+id/lv_invester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:listSelector="#00000000"
                android:scrollbars="none"></com.yxh.ryt.custemview.ListViewForScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="#FAFAFA"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="20dp"
                android:background="#FAFAFA">

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="#FAFAFA"
                    android:gravity="top"
                    android:hint="我也来说两句..."
                    android:textColorHint="#B2B2B2"
                    android:textSize="@dimen/defult_font" />

                <Button
                    android:id="@+id/bt_comment"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="9dp"
                    android:background="@android:color/black"
                    android:text="评论"
                    android:textColor="@android:color/white" />
            </RelativeLayout>


            <com.yxh.ryt.custemview.ListViewForScrollView
                android:id="@+id/lv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="30dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:listSelector="#00000000"
                android:scrollbars="none"></com.yxh.ryt.custemview.ListViewForScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="#FAFAFA"></TextView>

            <RelativeLayout
                android:id="@+id/rl_progress"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资流程"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defult_font"></TextView>

                <ImageView
                    android:id="@+id/iv_is_show"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/show_progress" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FAFAFA" />
            <!-- <LinearLayout
                 android:id="@+id/ll_progress"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <WebView
                     android:id="@+id/wv_invest_process"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:visibility="visible"
                     tools:ignore="WebViewLayout"></WebView>
             </LinearLayout>-->

            <com.yxh.ryt.custemview.ExpandView
                android:id="@+id/expandView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:clickable="true"

                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>