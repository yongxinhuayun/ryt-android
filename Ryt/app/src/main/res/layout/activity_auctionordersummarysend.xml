<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fafafa">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/white">
                    <ImageView
                        android:id="@+id/aaos_ib_back"
                        android:layout_width="wrap_content"
                        android:background="@null"
                        android:layout_marginLeft="14dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/zhuce_fanhui"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/rg_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="订单详情"
                        android:textSize="@dimen/title"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/rg_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e9e9e9"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@android:color/white"
                    android:paddingLeft="17dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:textColor="#333333"
                        android:text="订单编号:"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/aass_tv_number"
                        android:textColor="#333333"
                        android:text="123456789"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e9e9e9"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:id="@+id/aass_tv_address"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="17dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textSize="17sp"
                                android:text="温群英"
                                android:textColor="#333333"
                                android:id="@+id/aass_tv_addressName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="right"
                                android:textSize="17sp"
                                android:text="15110008479"
                                android:textColor="#333333"
                                android:id="@+id/aass_tv_addressPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <TextView
                            android:layout_marginBottom="17dp"
                            android:layout_marginTop="17dp"
                            android:id="@+id/aass_tv_addressDetail"
                            android:text="地址地址"
                            android:textSize="16sp"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e9e9e9"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/foa_iv_projectPicture"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:src="@mipmap/default_icon"/>
                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:id="@+id/foa_iv_projectTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="猫叠图天然水晶内画图"/>
                            <TextView
                                android:textColor="#ffffff"
                                android:textSize="15sp"
                                android:layout_marginLeft="12dp"
                                android:background="#21ba45"
                                android:id="@+id/foa_iv_projectState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易成功"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/foa_iv_projectBrief"
                            android:textSize="12sp"
                            android:layout_marginTop="11dp"
                            android:text="大师之作，传世之物，罕见珍品，收藏潜力不可预估，大师之作"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/foa_tv_projectPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#c71f21"
                                android:textSize="16sp"
                                android:text="￥200.00"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e9e9e9"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="支付方式"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="钱包"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="17dp">
                        <TextView
                            android:text="运费"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/aass_tv_money"
                            android:text="￥0.00"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="17dp">
                        <TextView
                            android:text="实付金额"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/aass_tv_realMoney"
                            android:text="￥2000.00"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:textColor="#c71f21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#999999"
                        android:text="客服联系方式help@efeiyi.com"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingRight="17dp"
        android:gravity="right|center_vertical">
        <TextView
            android:id="@+id/aass_tv_edit"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_focus2"
            android:layout_width="75dp"
            android:text="提醒发货"
            android:gravity="center"
            android:textColor="#57ad68"
            android:layout_height="30dp" />
    </LinearLayout>
</RelativeLayout>